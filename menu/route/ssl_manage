CHOICE=1

printf "%s===================%s\n" "${GREEN}" "${NC}"
printf "%s     SSL Manager   %s\n" "${GREEN}" "${NC}"
printf "%s===================%s\n" "${GREEN}" "${NC}"

while [ "${CHOICE}" != "0" ]
do
    printf "%s1. SSL Let's Encrypt%s\n" "${GREEN}" "${NC}"
    printf "%s2. SSL tra phi%s\n" "${GREEN}" "${NC}"
    printf "%s3. CloudFlare API%s\n" "${GREEN}" "${NC}"
    printf "%s4. SSL cho Alias Domain%s\n" "${GREEN}" "${NC}"
    printf "%s5. Go bo SSL Let's Encrypt%s\n" "${GREEN}" "${NC}"
    printf "%s==================%s\n" "${GREEN}" "${NC}"
    read -r -p " Nhap vao lua chon cua ban [0 = Thoat] " CHOICE
    if [ -z "${CHOICE}" ]
    then
        CHOICE=1
        continue
    fi
    case ${CHOICE} in
        1) clear; menu_letencrypt;;
        2) clear; bash "${BASH_DIR}"/menu/controller/ssl/paid_ssl;;
        3) clear; bash "${BASH_DIR}"/menu/controller/ssl/cf_api;;
        4) clear; bash "${BASH_DIR}"/menu/controller/ssl/le_alias_domain;;
        5) clear; bash "${BASH_DIR}"/menu/controller/ssl/remove_le;;
        0) clear; menu_primary ;;
        *) clear; printf "%s\n" "${RED}Lua chon cua ban khong chinh xac. Vui long chon lai.${NC}";;
    esac
done