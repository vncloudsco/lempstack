select_cron(){
    echo "Lua chon Cronjob muon xoa ?"
    PS3='Nhap lua chon cua ban (1-5): '
    options=("Cronjob auto backup local" "Cronjob auto backup Google Drive" "Cronjob auto backup Telegram" "Cancel" )
    select opt in "${options[@]}"
    do
        case $opt in
            "Cronjob auto backup local") cron="backup_local"; break;;
            "Cronjob auto backup Google Drive") cron="ggdrive"; break;;
            "Cronjob auto backup Telegram") cron="backup_telegram"; break;;
            "Cancel") cron="0"; break;;
            *) printf "%s\n" "${RED}Ban nhap sai, vui long nhap lai.${NC}";;
        esac
    done
}

destroy_cronjob(){
    crontab -u root -l | grep -v "${cron}" | crontab -u root -
}

_run(){
    select_cron

    if [ "${cron}" == "0" ]; then
        printf "%s\n" "${RED}Huy xoa cronjob.${NC}"
    else
        destroy_cronjob
        clear
        printf "%s\n" "${GREEN}Xoa Cronjob thanh cong.${NC}"
        echo ""
    fi
}

cron=""
_run
menu_cronjob